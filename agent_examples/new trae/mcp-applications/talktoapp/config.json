{
  "app": {
    "name": "TalkToApp",
    "version": "2.0.0",
    "description": "Revolutionary AI-powered app builder",
    "author": "TalkToApp Team",
    "homepage": "https://talktoapp.com",
    "repository": "https://github.com/talktoapp/talktoapp"
  },
  "ai": {
    "defaultModel": "gpt-4",
    "fallbackModel": "gpt-3.5-turbo",
    "maxTokens": 4096,
    "temperature": 0.7,
    "personalities": {
      "helpful": {
        "tone": "friendly",
        "verbosity": "medium",
        "creativity": 0.6
      },
      "creative": {
        "tone": "enthusiastic",
        "verbosity": "high",
        "creativity": 0.9
      },
      "technical": {
        "tone": "precise",
        "verbosity": "low",
        "creativity": 0.3
      }
    }
  },
  "mcp": {
    "enabled": true,
    "serverUrl": "mcp://localhost:3000",
    "timeout": 30000,
    "retryAttempts": 3,
    "capabilities": [
      "code-generation",
      "natural-language",
      "web-search",
      "image-generation",
      "file-operations"
    ]
  },
  "features": {
    "voiceInput": {
      "enabled": true,
      "language": "en-US",
      "continuous": false,
      "interimResults": false
    },
    "cloudSync": {
      "enabled": true,
      "provider": "talktoapp-cloud",
      "autoSync": true,
      "syncInterval": 300000,
      "conflictResolution": "merge"
    },
    "collaboration": {
      "enabled": true,
      "maxCollaborators": 10,
      "realTimeEditing": true,
      "permissions": ["view", "edit", "comment", "share"]
    },
    "analytics": {
      "enabled": true,
      "anonymized": true,
      "events": [
        "app_created",
        "app_exported",
        "template_used",
        "voice_input_used",
        "error_occurred"
      ]
    },
    "pwa": {
      "enabled": true,
      "offlineSupport": true,
      "backgroundSync": true,
      "pushNotifications": false
    }
  },
  "ui": {
    "theme": {
      "default": "light",
      "options": ["light", "dark", "auto"],
      "customThemes": true
    },
    "animations": {
      "enabled": true,
      "duration": 300,
      "easing": "ease-in-out"
    },
    "accessibility": {
      "highContrast": false,
      "reduceMotion": false,
      "screenReader": true,
      "keyboardNavigation": true
    },
    "responsive": {
      "breakpoints": {
        "mobile": 768,
        "tablet": 1024,
        "desktop": 1200
      }
    }
  },
  "storage": {
    "local": {
      "enabled": true,
      "maxSize": "50MB",
      "compression": true
    },
    "cloud": {
      "enabled": true,
      "provider": "talktoapp-cloud",
      "encryption": true,
      "backup": true
    },
    "cache": {
      "enabled": true,
      "maxAge": 86400000,
      "maxSize": "100MB"
    }
  },
  "export": {
    "formats": ["html", "react", "vue", "angular", "json"],
    "optimization": {
      "minify": true,
      "compress": true,
      "bundling": true
    },
    "deployment": {
      "platforms": ["netlify", "vercel", "github-pages"],
      "autoDeployment": false
    }
  },
  "templates": {
    "categories": [
      "productivity",
      "games",
      "education",
      "utilities",
      "entertainment",
      "business"
    ],
    "customTemplates": true,
    "templateSharing": true,
    "marketplace": {
      "enabled": false,
      "url": "https://marketplace.talktoapp.com"
    }
  },
  "security": {
    "csp": {
      "enabled": true,
      "policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
    },
    "sanitization": {
      "enabled": true,
      "allowedTags": ["div", "span", "p", "h1", "h2", "h3", "button", "input"],
      "allowedAttributes": ["class", "id", "style", "onclick"]
    },
    "rateLimit": {
      "enabled": true,
      "maxRequests": 100,
      "windowMs": 900000
    }
  },
  "development": {
    "debug": false,
    "verbose": false,
    "mockData": false,
    "hotReload": false,
    "sourceMap": true
  },
  "performance": {
    "lazyLoading": true,
    "codesplitting": true,
    "preloading": true,
    "compression": true,
    "caching": {
      "static": 86400000,
      "dynamic": 3600000,
      "api": 300000
    }
  },
  "monitoring": {
    "errorTracking": {
      "enabled": true,
      "service": "sentry",
      "sampleRate": 0.1
    },
    "performance": {
      "enabled": true,
      "metrics": ["load-time", "interaction", "memory-usage"],
      "reporting": true
    },
    "uptime": {
      "enabled": true,
      "interval": 60000,
      "endpoints": ["/health", "/api/status"]
    }
  },
  "localization": {
    "enabled": false,
    "defaultLanguage": "en",
    "supportedLanguages": ["en", "es", "fr", "de", "ja", "zh"],
    "autoDetect": true,
    "fallback": "en"
  },
  "integrations": {
    "github": {
      "enabled": false,
      "clientId": "",
      "scopes": ["repo", "user"]
    },
    "google": {
      "enabled": false,
      "clientId": "",
      "scopes": ["profile", "email"]
    },
    "discord": {
      "enabled": false,
      "webhookUrl": ""
    }
  },
  "limits": {
    "maxAppsPerUser": 100,
    "maxAppSize": "10MB",
    "maxCollaborators": 10,
    "maxExportsPerDay": 50,
    "maxAPICallsPerHour": 1000
  },
  "experimental": {
    "features": {
      "aiCodeReview": false,
      "visualEditor": false,
      "realTimePreview": true,
      "advancedTemplates": false
    },
    "betaFeatures": {
      "enabled": false,
      "optIn": false
    }
  }
}