# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.php]
indent_size = 4
max_line_length = 120

[*.{js,json,css,html,md}]
indent_size = 2
max_line_length = 80
