{
    "name": "venice/venice-ai-php",
    "description": "PHP SDK for Venice AI API",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.10",
        "husky/husky": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Venice\\": "src/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpstan": "phpstan analyse src --level=max",
        "php-cs-fixer": "php-cs-fixer fix src --rules=@PSR12"
    },
    "minimum-stability": "stable"
}
